<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="388dp"
        android:layout_height="wrap_content">

        <com.github.ivbaranov.mli.MaterialLetterIcon
            android:id="@+id/profile_imageView"
            android:layout_width="59dp"
            android:layout_height="45dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp" />


        <TextView
            android:id="@+id/numeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@+id/profile_imageView"
            android:padding="3dp"
            android:text="Numele Studentului"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/descriereTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/numeTxt"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/profile_imageView"
            android:text="Descriere"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/recomandareTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/descriereTxt"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/profile_imageView"
            android:text="Recomandare"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/notaTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/recomandareTxt"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="1dp"
            android:layout_toRightOf="@+id/profile_imageView"
            android:text="Nota"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="bold" />


    </RelativeLayout>
</androidx.cardview.widget.CardView>