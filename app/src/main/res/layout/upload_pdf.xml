<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:orientation="vertical"
    tools:context=".VerificareTelProfesori">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/profile_imageView"
            android:layout_width="234dp"
            android:layout_marginTop="40sp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_picture_as_pdf_black_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color_7"
            android:text="Adauga un certificat"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="40sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="655dp"
            android:layout_marginTop="120dp"
            android:orientation="vertical"
            android:padding="50dp">

            <EditText
                android:id="@+id/txt_pdfName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Introduceti denumirea documentului"
                android:textSize="15sp"
                />

            <Button
                android:id="@+id/adauga_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:background="@drawable/rounded_button"
                android:textColor="@color/white"
                android:text="AdaugÄƒ" />

            <Button
                android:id="@+id/view_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_button"
                android:textColor="@color/white"
                android:text="Vezi toate certificatele" />

            <Button
                android:id="@+id/sterge_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_button"
                android:textColor="@color/white"
                android:text="Sterge toate certificatele" />



        </LinearLayout>
    </LinearLayout>


</ScrollView>